<%= link_to category_entities_path(category) do %>
  <div class="category d-flex align-items-center my-3 p-2 bg-mute border-gray-1 rounded my-1">
    <img src="<%= category.icon %>" alt="image" class="category-image align-self-center border border-gray-1 rounded">
    <div class="flex-grow-1 d-flex flex-column justify-content-end mx-1">
      <h3 class="color-text font-proxima-bold no-link">
        <%= category.name %>
      </h3>
      <span class="category-date text-decoration-none font-proxima-light">
        <%= category.date %>
      </span>
    </div>
    <span class="align-self-center color-text text-decoration-none font-proxima-light">
      <%= category.total%>
    </span>
  </div>
<% end %>