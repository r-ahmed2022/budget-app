<%= stylesheet_link_tag 'splash' %>

<div class="container splash-div d-flex flex-column">
      <%= form_with model: @category, url: categories_path, method: :post do |f| %>
  <nav class="navbar bg-main d-flex justify-content-between p-2 align-items-center">
    <%= link_to user_path, method: :get, type: 'button' do %>
           <%= image_tag('navbar-left-arrow.png', :size => "23x23", :class => "left-arrow") %>
    <% end %>
    <h2 class="font-proxima-light text-white fw-bold my-0 fs-6">ADD CATEGORY</h2>
    <%= f.submit "Save" , class: 'btn' %>
  </nav>

  <div class="d-flex flex-column w-100 px-3 my-3">
    <div class="d-flex flex-column align-items-stretch">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', class: 'category-name', id: 'category_name'  %>
    </div>
    <hr class="my-1">
    <div class="d-flex flex-column align-items-stretch">
      <%= f.text_field :icon, autocomplete: "icon", placeholder: 'Icon URL', class: 'category-icon', id: 'category_icon'  %>
    </div>
  </div>
  <% end %>
  <% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: "#{name} generic-alert" %>
  <% end -%>

</div>